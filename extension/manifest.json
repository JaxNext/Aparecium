{
  "name": "Apa",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Apa can give explaination about a word, or a phrase, Just like the charm 'Aparecium' reveals invisible information in Harry Potter!",
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side-panel/index.html"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Aparecium"
  },
